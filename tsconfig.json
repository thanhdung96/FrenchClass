{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@app/base": ["shared/base"],
      "@app/base/*": ["shared/base/*"],
      "@app/core": ["src/core"],
      "@app/core/*": ["src/core/*"],
      "@app/api": ["src/api"],
      "@app/api/*": ["src/api/*"],
    }
  }
}
